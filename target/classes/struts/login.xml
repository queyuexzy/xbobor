<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="login" namespace="/" extends="struts-default">
		<action name="*" class="cn.system.basic.manage.action.LoginAction" method="{1}">
			<result name="login">/login.jsp</result>
			<result name="toMain">/login.jsp</result>
			<result name="logout">login.jsp</result>
			<result name="changePassword">/login.jsp</result>
			<result name="toMainFrameHead">/login.jsp</result>
			<result name="toMainFrameMenuTree">/login.jsp</result>
		</action>
	</package>
	
	<package name="checkSession" namespace="/" extends="struts-default">
		<action name="*" class="cn.system.basic.manage.action.LoginAction" method="{1}">
		</action>
	</package>
</struts>